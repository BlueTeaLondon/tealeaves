<%= tailwind_form_for :session, url: session_path do |f|%>
  <div>
    <div class="mt-2">
      <%= f.input :email,
        as: :email,
        input_html: {
          autocomplete: "email"
        } %>
    </div>
  </div>

  <div>
    <div class="mt-2">
      <%= f.input :password, 
        as: :password, 
        input_html: {
          autocomplete: "current-password"
        } %>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <div class="text-sm leading-6">
      <%= link_to t(".forgot_password"), new_password_path, class: "font-semibold text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 cursor-pointer" %>
    </div>
  </div>

  <div>
    <%= f.button :submit, nil, class: "flex w-full justify-center" %>
  </div>
<% end %>
