<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <%= image_tag "logo.png", class: "mx-auto h-10 w-auto", alt: "Logo" %>
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 dark:text-white"><%= t(".title") %></h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white dark:bg-slate-800 px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= tailwind_form_for :password_reset, 
            url: [@user, :password, token: @user.confirmation_token],
            method: :put do |f|%>

        <%= f.input :password, as: :password %>

        <div>
          <%= f.button :submit, nil, class: "flex w-full justify-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
